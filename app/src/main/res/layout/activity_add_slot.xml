<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:orientation="vertical"
                                                   tools:context=".addSlotActivity">


    <TextView
            android:text="Generate Slot"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:textSize="30sp"
            android:textColor="@color/about_libraries_dividerLight_openSource_dark"
            android:gravity="center"
            android:id="@+id/textView18"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/yatra_one"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView10"/>
    <TextView
            android:text="Select Date*"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginStart="5dp"
            android:textColor="#5000C1"
            android:id="@+id/slotDate"
            android:fontFamily="@font/kurale"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/setDate"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginTop="72dp"/>
    <Button
            android:text="Select Date"
            android:layout_width="152dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/modern_antiqua"
            android:background="@color/md_red_A700"
            android:id="@+id/setDate"
            android:textColor="@color/about_libraries_card"
            app:layout_constraintStart_toEndOf="@+id/slotDate" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="72dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18"/>
    <TextView
            android:text="Select Start Time *"
            android:inputType="time"
            android:ems="10"
            android:textColor="#5000C1"
            android:layout_width="200dp"
            android:layout_height="56dp"
            android:layout_marginStart="5dp"
            android:id="@+id/slotSTime"
            android:fontFamily="@font/kurale"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/setSTime"
            android:layout_marginTop="28dp" app:layout_constraintTop_toBottomOf="@+id/slotDate"
            app:layout_constraintBottom_toTopOf="@+id/slotETime"/>
    <Button
            android:text="Set Start Time"
            android:layout_width="152dp"
            android:layout_height="46dp"
            android:background="@color/md_red_A700"
            android:id="@+id/setSTime"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/modern_antiqua"
            android:textColor="@color/about_libraries_card" android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/slotSTime"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/setDate"
            app:layout_constraintBottom_toTopOf="@+id/setETime"/>
    <TextView
            android:text="Select Slot End Time *"
            android:inputType="time"
            android:ems="10"
            android:textColor="#5000C1"
            android:layout_width="200dp"
            android:layout_height="46dp"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/kurale"
            android:id="@+id/slotETime"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/setETime"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/slotSTime"/>
    <Button
            android:text="Set End Time"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:background="@color/md_red_A700"
            android:id="@+id/setETime"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/modern_antiqua"
            android:textColor="@color/about_libraries_card" android:textAllCaps="false"
            app:layout_constraintStart_toEndOf="@+id/slotETime" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/setSTime"
            android:layout_marginTop="24dp"/>
    <EditText
            android:layout_width="365dp"
            android:layout_height="48dp"
            android:inputType="number"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:layout_marginStart="15dp"
            android:id="@+id/slotDuration"
            android:fontFamily="@font/alegreya_sc"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:hint="Enter Slot Duration(in m)"
            android:textColorHint="#81578D"
            android:textColorHighlight="@color/about_libraries_card_dark" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="36dp" app:layout_constraintTop_toBottomOf="@+id/slotETime"
            app:layout_constraintBottom_toTopOf="@+id/setBreak"/>
    <EditText
            android:layout_width="365dp"
            android:layout_height="45dp"
            android:inputType="number"
            android:ems="10"
            android:gravity="fill_horizontal"
            android:fontFamily="@font/alegreya_sc"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:id="@+id/setBreak"
            android:layout_marginStart="15dp"
            android:hint="Enter time of break b/w slots(in m)"
            android:textColorHint="#81578D"
            android:textColorHighlight="@color/about_libraries_card_dark"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/slotDuration"
            android:layout_marginTop="28dp"/>
    <Button
            android:text="Generate Slots"
            android:layout_width="152dp"
            android:layout_height="wrap_content"
            android:background="@color/md_red_A700"
            android:id="@+id/generateSlot"
            android:fontFamily="@font/modern_antiqua"
            android:textColor="@color/about_libraries_card"
            app:layout_constraintTop_toBottomOf="@+id/setBreak"
            android:layout_marginTop="44dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.017"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.954" android:textStyle="bold"/>
    <TextView
            android:text="Mandatory(*)"
            android:fontFamily="@font/rosemary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.082"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/about_libraries_accent"
            android:id="@+id/textView10" tools:ignore="MissingConstraints" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView18" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/slotDate" app:layout_constraintVertical_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>