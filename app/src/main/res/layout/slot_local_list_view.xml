<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:text="Stime"
            android:layout_width="74dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="20dp"
            android:id="@+id/stime" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/etime"/>
    <TextView
            android:text="Etime"
            android:layout_width="85dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="20dp"
            android:id="@+id/etime" app:layout_constraintStart_toEndOf="@+id/stime"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/date"/>
    <TextView
            android:text="Date"
            android:layout_width="84dp"
            android:layout_height="41dp" tools:layout_editor_absoluteY="20dp"
            android:id="@+id/date" app:layout_constraintStart_toEndOf="@+id/etime"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/delete"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="16dp"
            android:id="@+id/delete"
            android:background="@drawable/ic_delete_black_24dp"
            app:layout_constraintStart_toEndOf="@+id/date"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/etime" android:layout_marginTop="12dp"/>
</android.support.constraint.ConstraintLayout>