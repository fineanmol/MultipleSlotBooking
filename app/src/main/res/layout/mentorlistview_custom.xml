<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">
    <TextView
            android:text="Name Loading.."
            android:layout_width="wrap_content"
            android:layout_height="39dp"
            android:id="@+id/mentorName"
            tools:ignore="MissingConstraints"
            android:gravity="center"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:fontFamily="@font/mate_sc"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.028" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintVertical_bias="0.487"/>
    <TextView
            android:text="Id Loading."
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:id="@+id/mentorId"
            tools:ignore="MissingConstraints"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@font/montserrat_bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/divider"/>
    <Button
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:id="@+id/delete"
            android:background="@drawable/ic_delete_gray_24dp"
            tools:ignore="MissingConstraints"
            app:layout_constraintStart_toStartOf="@+id/mentorName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.891" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/divider" app:layout_constraintVertical_bias="0.607"/>
    <View
            android:id="@+id/divider"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            tools:layout_editor_absoluteX="8dp" app:layout_constraintTop_toTopOf="@+id/mentorId"
            android:layout_marginTop="60dp" tools:ignore="MissingConstraints"/>
</androidx.constraintlayout.widget.ConstraintLayout>