<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
    <TextView
            android:id="@+id/mentor_Name"
            android:layout_width="214dp"
            android:layout_height="39dp"
            android:paddingBottom="10dp"
            android:text="Mentor Name"
            android:textAlignment="center"
            android:textSize="12dp"
            android:textStyle="bold"
            android:layout_alignParentEnd="true" android:layout_alignParentRight="true"
            android:layout_marginRight="54dp" android:layout_marginEnd="54dp" android:layout_alignParentStart="true"
            android:layout_marginLeft="128dp" android:layout_marginStart="128dp" android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="65dp"
            android:layout_height="44dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="Tue,22"
            android:layout_alignParentStart="true" android:layout_marginLeft="39dp" android:layout_marginStart="39dp"
            android:layout_alignParentLeft="true"/>
    <TextView
            android:id="@+id/monthslot"
            android:layout_width="79dp"
            android:layout_height="48dp"
            android:textSize="10sp"
            android:gravity="center"
            android:text="June,2019"
            android:layout_toStartOf="@+id/slot_timing" android:layout_marginRight="22dp"
            android:layout_marginEnd="22dp" android:layout_toLeftOf="@+id/slot_timing"
            android:layout_marginTop="-3dp" android:layout_below="@+id/dateslot" android:layout_marginBottom="0dp"/>

    <TextView
            android:id="@+id/reserved_slot_timing"
            android:layout_width="196dp"
            android:layout_height="35dp"
            android:layout_below="@+id/mentor_Name"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:textAlignment="center"
            android:textSize="10dp"
            android:textStyle="bold" android:layout_marginTop="24dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="52dp" android:layout_marginEnd="52dp"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp"/>


</RelativeLayout>