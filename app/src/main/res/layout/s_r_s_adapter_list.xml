<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">

    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="266dp"
            android:layout_marginTop="90dp"
            android:layout_marginBottom="233dp"
            app:cardBackgroundColor="#F9FAFB"
            app:cardCornerRadius="5dp"
            app:cardElevation="5dp">
        <TextView
                android:id="@+id/mentor_Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#FF5722"
                android:paddingBottom="10dp"
                android:text="Mentor Name"
                android:fontFamily="@font/nosifer"
                android:textAlignment="center"
                android:textSize="40dp"
                android:textStyle="bold"


        />
        <TextView
                android:text="Mentor's Name:"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:textColor="#050505"
                android:textSize="30dp"
                android:fontFamily="@font/amarante"
                android:layout_marginLeft="10dp"
        />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_marginTop="270dp"
            android:layout_height="270dp"
            app:cardBackgroundColor="#FCFBFC" app:cardElevation="5dp"
            app:cardCornerRadius="5dp">
        <TextView
                android:id="@+id/dateslot"
                android:layout_width="219dp"
                android:layout_height="76dp"
                android:textSize="30sp"
                android:textColor="#050505"
                android:gravity="center"
                android:text="Tue,22"
                android:fontFamily="@font/amarante"
                android:layout_marginBottom="150dp"/>
        <TextView
                android:textAlignment="viewStart"
                android:id="@+id/monthslot"
                android:layout_width="158dp"
                android:fontFamily="@font/amarante"
                android:layout_height="79dp"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="#050505"
                android:layout_marginStart="95dp"
                android:text="June,2019"
                android:layout_marginTop="-77dp"
                tools:ignore="RtlCompat"/>
        <TextView
                android:id="@+id/reserved_slot_timing"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="Slot Timing"
                android:textColor="#0B0B0B"
                android:textAlignment="center"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp" android:fontFamily="@font/modern_antiqua"/>
        <TextView
                android:layout_marginTop="110dp"
                android:textSize="20dp"
                android:textColor="#050505"
                android:text="Your Booking at :"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:fontFamily="@font/kurale"/>
    </androidx.cardview.widget.CardView>


</RelativeLayout>