<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Mentor_refer"
        android:background="#ffffff">


    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/refer"
            android:id="@+id/refer" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:contentDescription="TODO"/>
    <TextView
            android:text="Loading.."
            android:textColor="#000"
            android:layout_width="256dp"
            android:layout_height="38dp"
            android:gravity="center"
            android:textSize="20dp"

            android:fontFamily="@font/kurale"
            android:id="@+id/mentorrefertext"
            app:layout_constraintStart_toEndOf="@+id/refer"
            app:layout_constraintEnd_toStartOf="@+id/refer"
            app:layout_constraintTop_toBottomOf="@+id/refer" app:layout_constraintBottom_toTopOf="@+id/refer"
            app:layout_constraintVertical_bias="0.328" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:text="SHARE WITH YOUR STUDENTS"
            android:layout_width="250dp"
            android:layout_height="45dp"
            android:textColor="#F7F6F6"
            android:gravity="center"
            android:fontFamily="@font/yatra_one"
            android:background="@color/md_red_A700"
            android:id="@+id/invitebtn"
            app:layout_constraintStart_toEndOf="@+id/refer"
            app:layout_constraintEnd_toStartOf="@+id/refer"
            app:layout_constraintTop_toBottomOf="@+id/refer" app:layout_constraintBottom_toTopOf="@+id/refer"
            app:layout_constraintVertical_bias="0.127" app:layout_constraintHorizontal_bias="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>