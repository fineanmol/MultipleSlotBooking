<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
    <TextView
            android:id="@+id/student_Name"
            android:layout_width="384dp"
            android:layout_height="30dp"
            android:paddingBottom="10dp"

            android:text="Student Name"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="true" android:gravity="center" android:textColor="#03A9F4"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="22"
            android:layout_below="@+id/student_Name"
            android:textColorHint="#673AB7"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="320dp"
            android:layout_height="25dp"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:textAlignment="center"
            android:textSize="11dp"
            android:textStyle="bold"
            android:layout_toEndOf="@+id/dateslot" android:layout_marginStart="1dp"
            android:layout_toRightOf="@+id/dateslot"
            android:layout_below="@+id/student_Name" android:layout_marginLeft="1dp"
            android:gravity="start"/>
    <TextView
            android:text="number"
            android:layout_width="263dp"
            android:layout_height="24dp"
            android:id="@+id/studentno"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:foregroundGravity="center"
            android:layout_below="@+id/dateslot"
            android:layout_alignStart="@+id/student_Name"
            android:layout_marginStart="119dp" android:layout_marginTop="20dp"/>
    <TextView
            android:text="student id"
            android:layout_width="169dp"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="false"

            android:layout_alignParentEnd="true"
            android:textAlignment="viewStart"
            android:id="@+id/studentid"
            android:layout_marginEnd="3dp"
            android:gravity="center" android:layout_below="@+id/dateslot"/>
    <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_call_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/callbtn" android:layout_below="@+id/dateslot"
            android:gravity="center" android:layout_alignStart="@+id/slot_timing" android:layout_marginTop="20dp"
            android:layout_marginStart="22dp"/>
    <TextView
            android:text="Student Id:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_below="@+id/dateslot" android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/studentid" android:layout_marginRight="9dp" android:layout_marginEnd="9dp"
            android:layout_toLeftOf="@+id/studentid"/>


</RelativeLayout>