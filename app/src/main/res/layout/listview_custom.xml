<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:padding="15dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

    <TextView
            android:id="@+id/mentor_Name"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dateslot"
            android:layout_toRightOf="@+id/dateslot"
            android:paddingBottom="10dp"
            android:text="Mentor Name"
            android:textColor="#039BE5"
            android:textAppearance="@drawable/roundedredbutton"
            android:textAlignment="textStart"

            android:textSize="15dp"
            android:textStyle="bold" android:layout_marginLeft="24dp"
            android:layout_marginStart="24dp" android:layout_alignTop="@+id/dateslot" android:layout_marginTop="0dp"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="22"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dateslot"
            android:layout_toRightOf="@+id/dateslot"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:textSize="12dp"

            android:textStyle="bold"
            android:layout_alignTop="@+id/mentor_Name"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp" tools:ignore="RtlCompat"/>

    <Button
            android:id="@+id/bookbtn"
            android:layout_width="103dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dateslot"
            android:background="@drawable/roundedredbutton"
            android:text="Book" android:layout_marginLeft="168dp"

            android:layout_alignTop="@+id/mentor_Name" android:layout_toEndOf="@+id/mentor_Name"
            android:layout_marginStart="-24dp" android:layout_marginTop="-1dp"/>
    <TextView
            android:text="Slot Timing:"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:id="@+id/textView3"
            android:textAlignment="viewEnd"
            android:layout_marginTop="116dp"
            android:layout_marginStart="-15dp" android:layout_marginBottom="-9dp"
            android:layout_alignBottom="@+id/slot_timing" android:textSize="12dp"/>


</RelativeLayout>