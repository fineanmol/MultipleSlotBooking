<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:padding="12dp"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="3dp"
                android:orientation="vertical">

    <TextView
            android:id="@+id/mentor_Name"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dateslot"
            android:layout_toRightOf="@+id/dateslot"
            android:paddingBottom="10dp"
            android:text="Mentor Name"
            android:textColor="#039BE5"
            android:fontFamily="@font/yatra_one"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textAlignment="textStart"

            android:textSize="15dp"
            android:textStyle="bold" android:layout_marginLeft="54dp"
            android:layout_marginStart="54dp" android:layout_alignTop="@+id/dateslot" android:layout_marginTop="1dp"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:gravity="center"
            android:text="22" android:fontFamily="@font/amarante"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/dateslot"
            android:layout_toRightOf="@+id/dateslot"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:textAlignment="viewStart"
            android:gravity="center"
            android:textSize="12dp"

            android:textStyle="bold"
            android:layout_alignTop="@+id/mentor_Name"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="53dp"
            android:layout_marginStart="53dp" tools:ignore="RtlCompat"
            android:fontFamily="@font/amarante"/>

    <Button
            android:id="@+id/bookbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dateslot"
            android:background="@color/md_red_A700"
            android:text="Book" android:layout_marginLeft="237dp"
            android:fontFamily="@font/nosifer"
            android:textColor="#FBF4EFF2"
    />
    <TextView
            android:text="Slot Timing:"
            android:layout_width="82dp"
            android:layout_height="26dp"
            android:textAlignment="viewEnd"
            android:layout_marginTop="116dp"
            android:fontFamily="@font/amarante"
            android:layout_marginStart="-15dp" android:layout_marginBottom="-9dp"
            android:layout_alignBottom="@+id/slot_timing" android:textSize="12dp"/>


</RelativeLayout>