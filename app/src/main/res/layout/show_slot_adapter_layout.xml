<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
    <TextView
            android:id="@+id/student_Name"
            android:layout_width="384dp"
            android:layout_height="30dp"
            android:paddingBottom="10dp"

            android:text="Student Name"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="true" android:gravity="center" android:textColor="#03A9F4"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="70dp"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:gravity="center"
            android:text="22"
            android:layout_below="@+id/student_Name"
            android:textColorHint="#673AB7"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="125dp"
            android:layout_height="37dp"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:foregroundGravity="center"
            android:textSize="11dp"
            android:textStyle="bold"

            android:layout_toRightOf="@+id/dateslot"
            android:layout_below="@+id/student_Name" android:layout_marginLeft="99dp"
            android:layout_marginTop="17dp"
            tools:ignore="RtlCompat"/>
    <TextView
            android:text="number"
            android:layout_width="263dp"
            android:layout_height="24dp"
            android:id="@+id/studentno"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:foregroundGravity="center"
            android:layout_below="@+id/dateslot"
            android:layout_alignStart="@+id/student_Name"
            android:layout_marginStart="139dp"
            android:layout_marginTop="23dp" tools:ignore="RtlCompat"/>
    <TextView
            android:text="student id"
            android:layout_width="139dp"
            android:layout_height="wrap_content"

            android:layout_alignParentRight="false"

            android:layout_alignParentEnd="true"
            android:textAlignment="viewStart"
            android:id="@+id/studentid"
            android:layout_marginEnd="83dp"
            android:gravity="center" android:layout_below="@+id/dateslot" android:layout_marginTop="4dp"
            tools:ignore="RtlCompat"/>
    <TextView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_call_black_24dp"
            android:layout_height="wrap_content"
            android:id="@+id/callbtn" android:layout_below="@+id/dateslot"
            android:gravity="center" android:layout_alignStart="@+id/slot_timing" android:layout_marginTop="24dp"
            android:layout_marginStart="-62dp"/>
    <TextView
            android:text="Student Id:"
            android:layout_width="78dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" android:layout_below="@+id/dateslot" android:layout_marginTop="-1dp"
            android:layout_toStartOf="@+id/studentid" android:layout_marginRight="2dp" android:layout_marginEnd="2dp"
            android:layout_toLeftOf="@+id/studentid"/>
    <TextView
            android:text="Time Slot:"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_below="@+id/student_Name" android:layout_marginTop="-7dp"
            android:layout_toStartOf="@+id/studentid" android:layout_marginEnd="0dp"/>
    <TextView
            android:text="Not Booked"
            android:layout_width="113dp"
            android:layout_height="34dp" android:id="@+id/status" android:layout_alignParentEnd="true"
            android:layout_marginEnd="39dp" android:layout_marginTop="82dp" android:layout_alignParentTop="true"
            android:background="@drawable/gradient"
            android:textColor="@color/common_google_signin_btn_text_dark_default" android:textSize="20sp"
            android:textStyle="bold"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            android:layout_alignParentEnd="true" android:layout_marginEnd="26dp"
            android:layout_marginTop="130dp" android:layout_alignParentTop="true"/>


</RelativeLayout>