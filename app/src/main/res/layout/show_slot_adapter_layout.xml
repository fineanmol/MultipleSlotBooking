<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
    <TextView
            android:id="@+id/student_Name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="230dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/amarante"
            android:clickable="true" android:gravity="center"
            android:textColor="#03A9F4"
            android:layout_alignBaseline="@+id/status"
            android:layout_toEndOf="@+id/status"
            android:layout_marginStart="18dp"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:textColor="#000000"
            android:fontFamily="@font/rosemary"
            android:text="22"
            android:textColorHint="#673AB7"
            android:layout_alignStart="@+id/divider2" android:layout_marginStart="3dp"
            android:layout_alignBaseline="@+id/textView"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:textColor="#000000"
            android:gravity="center"
            android:fontFamily="@font/sofia"
            android:textAlignment="viewStart"
            android:foregroundGravity="center"
            android:textSize="11dp"
            android:textStyle="bold"

            android:layout_toRightOf="@+id/dateslot"
            android:layout_marginLeft="98dp"
            tools:ignore="RtlCompat"
            android:layout_alignTop="@+id/textView" android:layout_marginTop="-6dp"
            android:layout_toEndOf="@+id/textView" android:layout_marginStart="-3dp"/>
    <TextView
            android:text="Time Slot:"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:textColor="#000000"
            android:id="@+id/textView"
            android:fontFamily="@font/kurale"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/dateslot" android:layout_alignParentTop="true"/>
    <TextView
            android:text="Not Booked"
            android:layout_width="wrap_content"
            android:layout_height="43dp" android:id="@+id/status"
            android:fontFamily="@font/yatra_one"
            android:textColor="#000000"
            android:textSize="25sp"

            android:textStyle="bold"
            android:layout_marginBottom="-178dp"
            android:layout_marginTop="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="60dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="#625757"
            android:background="?android:attr/listDivider"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="101dp" android:layout_marginStart="3dp"/>

    <Button
            android:layout_width="14dp"
            android:layout_height="wrap_content"
            android:id="@+id/deletebtn"
            android:background="@drawable/ic_delete_gray_24dp"
            tools:ignore="MissingConstraints"
            android:layout_below="@+id/slot_timing"
            android:layout_marginTop="21dp" android:layout_marginBottom="32dp"
            android:layout_alignBottom="@+id/divider2" android:layout_marginEnd="247dp"
            android:layout_alignEnd="@+id/slot_timing"
            android:layout_toEndOf="@+id/textView" android:layout_marginStart="-215dp"/>


</RelativeLayout>