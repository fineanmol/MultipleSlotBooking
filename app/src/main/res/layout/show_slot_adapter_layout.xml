<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:padding="15dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:orientation="vertical">
    <TextView
            android:id="@+id/student_Name"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingBottom="10dp"
            android:layout_marginLeft="230dp"
            android:textAlignment="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:clickable="true" android:gravity="center" android:textColor="#03A9F4"
            android:layout_alignBaseline="@+id/status"
            android:layout_toEndOf="@+id/status" android:layout_marginStart="37dp"/>

    <TextView
            android:id="@+id/dateslot"
            android:layout_width="101dp"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:gravity="center"
            android:text="22"
            android:textColorHint="#673AB7"
            android:layout_alignStart="@+id/divider2" android:layout_marginStart="3dp"
            android:layout_alignBaseline="@+id/textView"/>

    <TextView
            android:id="@+id/slot_timing"
            android:layout_width="127dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="Slot Timing"
            android:gravity="center"
            android:textAlignment="viewStart"
            android:foregroundGravity="center"
            android:textSize="11dp"
            android:textStyle="bold"

            android:layout_toRightOf="@+id/dateslot"
            android:layout_marginLeft="101dp"
            tools:ignore="RtlCompat"
            android:layout_alignTop="@+id/textView" android:layout_marginTop="-3dp"
            android:layout_toEndOf="@+id/textView" android:layout_marginStart="5dp"/>
    <TextView
            android:text="Time Slot:"
            android:layout_width="78dp"
            android:layout_height="25dp"
            android:gravity="center"
            android:id="@+id/textView"
            android:layout_marginStart="21dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/dateslot" android:layout_alignParentTop="true"/>
    <TextView
            android:text="Not Booked"
            android:layout_width="wrap_content"
            android:layout_height="43dp" android:id="@+id/status"
            android:fontFamily="sans-serif"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginBottom="-178dp"
            android:layout_marginTop="45dp"
            android:layout_alignParentTop="true" android:layout_alignParentStart="true"
            android:layout_marginStart="65dp"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:background="?android:attr/listDivider"
            android:layout_alignParentStart="true" android:layout_alignParentTop="true"
            android:layout_marginTop="101dp" android:layout_marginStart="3dp"/>
    <TextView
            android:text="Status: "
            android:layout_width="68dp"
            android:layout_height="37dp"
            android:id="@+id/textView8"
            android:layout_alignStart="@+id/dateslot"
            android:layout_marginStart="5dp" android:layout_alignTop="@+id/student_Name"
            android:layout_marginTop="0dp"/>


</RelativeLayout>