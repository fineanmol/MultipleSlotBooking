<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"

        tools:context=".UserHomeV2"
        android:background="@color/about_libraries_special_button_openSource_dark">
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/yatra_one"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:textSize="13dp"
            android:id="@+id/textviewstatus"
            tools:layout_editor_absoluteY="32dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:textAlignment="center" tools:ignore="MissingConstraints"/>
    <TextView
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:text="@string/newooking"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:textSize="17dp"
            android:id="@+id/textView9"
            android:fontFamily="@font/mate_sc"
            android:textAlignment="center"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/new_book_btn" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/divider4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:text="@string/already_booked_show"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:textSize="17dp"
            android:id="@+id/textView7"
            android:fontFamily="@font/mate_sc"
            android:textAlignment="center"
            android:layout_marginBottom="36dp"
            app:layout_constraintBottom_toTopOf="@+id/show_appointment_btn"
            app:layout_constraintStart_toEndOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" app:layout_constraintHorizontal_bias="0.5"/>


    <Button android:layout_width="185dp" android:layout_height="wrap_content"
            android:text="Show your Appointment"
            android:id="@+id/show_appointment_btn"
            android:fontFamily="@font/kurale"
            android:background="@color/md_red_A700"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            android:layout_marginBottom="72dp" app:layout_constraintStart_toEndOf="@+id/divider4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button android:layout_width="185dp"
            android:text="Book Now"

            android:background="@color/md_red_A700"
            android:id="@+id/new_book_btn"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kurale"
            android:textAllCaps="false"
            app:layout_constraintBottom_toTopOf="@+id/divider3"
            android:layout_marginBottom="72dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider4"/>
    <View
            android:id="@+id/divider3"
            android:layout_width="395dp"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="1dp"
            android:layout_height="715dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintEnd_toEndOf="@+id/divider3"
            app:layout_constraintStart_toStartOf="@+id/divider3" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.5"/>
    <TextView
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:text="@string/manage_mentor_list"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:textSize="17dp"
            android:fontFamily="@font/mate_sc"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/divider4"
            android:id="@+id/textView14" app:layout_constraintTop_toBottomOf="@+id/divider3"
            android:layout_marginTop="64dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.01"
            app:layout_constraintHorizontal_bias="0.5"/>
    <Button
            android:text="Manage Mentor List"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:id="@+id/show_referal_list"
            android:fontFamily="@font/kurale"
            android:background="@color/md_red_A700" android:textAllCaps="false"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/divider4" android:layout_marginTop="28dp"
            app:layout_constraintTop_toBottomOf="@+id/textView14" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>

    <TextView
            android:layout_width="185dp"
            android:layout_height="100dp"
            android:text="@string/add_mentor"
            android:textColor="@color/about_libraries_dividerDark_openSource_dark"
            android:textSize="17dp"
            android:fontFamily="@font/mate_sc"
            android:textAlignment="center"
            android:id="@+id/textView13"
            app:layout_constraintStart_toEndOf="@+id/divider4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/divider3"
            app:layout_constraintVertical_bias="0.01" app:layout_constraintHorizontal_bias="0.5"
            android:layout_marginTop="64dp" android:layout_marginBottom="8dp"/>
    <ImageView
            android:layout_width="109dp"
            android:layout_height="129dp" app:srcCompat="@drawable/downarrow"
            app:layout_constraintStart_toEndOf="@+id/divider4"
            app:layout_constraintHorizontal_bias="0.583"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="80dp" app:layout_constraintTop_toBottomOf="@+id/textView13"
    />
</androidx.constraintlayout.widget.ConstraintLayout>
